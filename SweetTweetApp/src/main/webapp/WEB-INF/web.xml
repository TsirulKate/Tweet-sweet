        <url-pattern>/tweets/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletInitPosts</servlet-name>
        <servlet-class>servletsForPosts.ServletInitPosts</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletInitPosts</servlet-name>
        <url-pattern>/initPosts</url-pattern>
    </servlet-mapping>

    <!-- End Task 8 -->

    <!-- Servlets for Task 12 -->
    <servlet>
        <servlet-name>ServletInitUsers</servlet-name>
